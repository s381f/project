<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Books</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
      }

      table, th, td {
        border: 1px solid #ddd;
      }

      th, td {
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #333;
        color: #fff;
      }

      a {
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s ease;
      }

      a:hover {
        color: #0056b3;
      }

      .navbar {
        width: 100%;
        background-color: #333;
        overflow: hidden;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .navbar-title {
        color: #fff;
        font-size: 20px;
        margin-left: 20px;
      }

      .navbar a {
        display: block;
        color: #fff;
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .navbar a:hover {
        background-color: #555;
      }

      .container {
        margin-top: 70px;
      }

      input {
        display: block;
        margin: 10px auto;
        padding: 10px;
        width: 80%;
        max-width: 300px;
      }

      button {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #555;
      }
    </style>
</head>
<body>
<div class="navbar">
    <span class="navbar-title">Book Management System</span>
    <a href="/dashboard">Dashboard</a>
    <a href="/logout">Logout</a>
</div>
<div class="container">
    <h2>Search Books</h2>
    <div style="display: flex; justify-content: space-between">
        <label>
            <input type="text" id="search-book-input" placeholder="Search Books" required>
        </label>
        <button id="search-book-btn" type="button">Search</button>
    </div>
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% books.forEach(function(book) { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td>
                    <a href="/editBook?id=<%= book._id %>">Edit</a>
                    <a href="/books/<%= book._id %>/delete">Delete</a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
    <a href="/dashboard">Back to Dashboard</a>
</div>
</body>
<script>
  document.getElementById('search-book-btn').addEventListener('click', function (event) {
    event.preventDefault();
    const keyword = document.getElementById('search-book-input').value.trim();

    fetch('/searchBooks', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({keyword: keyword})
    })
      .then(response => {
        if (!response.ok) {
          throw new Error('Failed to fetch search results');
        }
        return response.json();
      })
      .then(data => {
        // Clear the table body
        const tableBody = document.querySelector('table tbody');
        tableBody.innerHTML = '';

        // Populate the table with search results
        data.books.forEach(book => {
          const row = document.createElement('tr');
          row.innerHTML = `
                        <td>${book.title}</td>
                        <td>${book.author}</td>
                        <td>
                            <a href="/editBook?id=${book._id}">Edit</a>
                            <a href="/books/${book._id}/delete">Delete</a>
                        </td>
                    `;
          tableBody.appendChild(row);
        });
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while fetching the search results.');
      });
  });
</script>

</html>
